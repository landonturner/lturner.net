{{!-- layouts/blog-post.hbs --}}
<!doctype html>
<html>
  <head>
    {{>ga-tag}}

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{{title}}</title>
    {{>tags}}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/app.css">
    <link rel="stylesheet" href="/assets/prism_dark.css">
    <script src="/assets/prism_dark.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto|Source+Code+Pro:400,500" rel="stylesheet">
  </head>
  <body>
    {{>header}}

    <div class="container">
      <div class="row">
        <div class="col">
          <h1>{{title}}</h1>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <h6 class="date">{{displayDate}}</h6>
        </div>
      </div>

      <div class="row mt-3">
        <div class="col markdown-body">
          {{{contents}}}
        </div>
      </div>

      <div class="row mt-4">
        <div class="col">
          <div id="disqus_thread"></div>
        </div>
      </div>
    </div>

    <nav class="navbar">
      <div class="navbar-nav">
        <div id="copyright">Â© Landon Turner</div>
      </div>
    </nav>

    {{>scripts}}
<script>
{{#if production}}
var disqus_config = function () {
  this.page.url = 'https://lturner.net/{{path}}';
  this.page.identifier = '{{path}}';
};
(function() { var d = document, s = d.createElement('script'); s.src = 'https://lturner-net.disqus.com/embed.js'; s.setAttribute('data-timestamp', +new Date()); (d.head || d.body).appendChild(s); })();
{{/if}}
</script>
  </body>
</html>
