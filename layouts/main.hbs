{{!-- layouts/main.hbs --}}
<!doctype html>
<html>
  <head>
    {{>ga-tag}}

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{{ title }}</title>
    {{>tags}}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/app.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto|Source+Code+Pro:400,500" rel="stylesheet">
  </head>

  <body>
    {{>header}}

    <div class="container">
      <div class="row mb-5">
        <div class="col">
          {{{contents}}}
        </div>
      </div>

      {{#each blog}}
      <div class="row my-2">
        <div class="col">
          <div class="row">
            <div class="col">
              <a href={{this.path}}>
                <h3 class="mb-0">{{this.title}}</h3>
              </a>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <p class="date py-0 mb-1">{{this.displayDate}}</p>
            </div>
          </div>
          <div class="row">
            <div class="col">
              {{this.description}}
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>

    <nav class="navbar fixed-bottom">
      <div class="navbar-nav">
        <div id="copyright">Â© Landon Turner</div>
      </div>
    </nav>

    {{>scripts}}
  </body>
</html>
